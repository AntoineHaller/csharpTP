@using Microsoft.AspNetCore.Identity
@using Venezia
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, Venezia

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<h1>Accueil</h1>



@if (SignInManager.IsSignedIn(User))
{
    <!--TagHelper-->
    <p>Bienvenu !</p>
    <p>Utilisateur connecté: <user></user></p>
}
else
{
    <p>Il n'y a pas d'utilisateur connecté.</p>
    <a class="btn btn-outline-primary" id="register" asp-area="Identity" asp-page="/Account/Register">Créer un compte</a>
    <a class="btn btn-outline-primary" id="login" asp-area="Identity" asp-page="/Account/Login">Se connecter</a>
}

